{
  "tasks": {
    "start": "deno run --allow-net --allow-env index.ts"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "deno.ns", "deno.unstable", "dom"],
    "strict": true,
    "types": [
      "https://deno.land/std@0.177.0/http/server.ts",
      "https://esm.sh/@supabase/supabase-js@2.31.0"
    ]
  },
  "imports": {
    "std/": "https://deno.land/std@0.177.0/",
    "supabase": "https://esm.sh/@supabase/supabase-js@2.31.0"
  },
  "lint": {
    "files": {
      "include": ["**/*.ts"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["**/*.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
}
